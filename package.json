{
  "name": "expo-ecc.com",
  "version": "0.0.1",
  "description": "",
  "main": "server.js",
  "scripts": {
    "start": "npm run serve & npm run watch",
    "serve": "node .",
    "watch": "npm run css:watch & npm run js:watch",
    "build": "npm run css:build & npm run js:build",
    "css:watch": "node-sass -w scss/style.scss -o css",
    "css:build": "node-sass scss/style.scss | postcss -u autoprefixer --autoprefixer.browsers 'last 2 versions' -u cssnano -o css/style.css",
    "js:watch": "watchify -t babelify js/main.js -o js/bundle.js -v",
    "js:build": "browserify -t babelify js/main.js | uglifyjs -cm > js/bundle.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ecc-expo2016/expo-ecc.com.git"
  },
  "author": "Yuhei Yasuda <yuhei.yasuda1003@gmail.com> (http://yhey.me/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ecc-expo2016/expo-ecc.com/issues"
  },
  "homepage": "http://expo-ecc.com/",
  "dependencies": {
    "babel-polyfill": "^6.3.14",
    "sanitize.css": "^3.0.0"
  },
  "devDependencies": {
    "autoprefixer": "^6.3.1",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-stage-0": "^6.3.13",
    "babelify": "^7.2.0",
    "browserify": "^13.0.0",
    "cssnano": "^3.4.0",
    "express": "^4.13.3",
    "node-sass": "^3.4.2",
    "postcss-cli": "^2.4.0",
    "uglifyjs": "^2.4.10",
    "watchify": "^3.7.0"
  }
}
